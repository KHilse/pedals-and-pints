<h1>Riding Day!</h1>

<h2><%=event.name%></h2>
<p><%=event.description%></p>

<h2>Route</h2>
<% if (res.locals.waypoints.length == 0) { %>
	<p>Check into a waypoint and add the beers you drank!</p>
<% } %>
<% event.waypoints.forEach(waypoint => { %>
	<p><%=waypoint.stop_number%> <%=waypoint.name%></p>
	<p><%=waypoint.untappd_id%> <%=waypoint.long%> <%=waypoint.lat%></p>
	<form method="POST" action="/waypointcheckin">
		<input type="hidden" value="waypoint.id">
	</form>
<% }) %>

